{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OptionInfo",
  "description": "オプション固有の情報を表現する",
  "type": "object",
  "properties": {
    "strike_price": {
      "$ref": "definitions.json#/$defs/Price",
      "description": "権利行使価格"
    },
    "option_type": {
      "$ref": "definitions.json#/$defs/OptionType",
      "description": "オプションタイプ（call/put）"
    },
    "exercise_style": {
      "oneOf": [
        {
          "$ref": "definitions.json#/$defs/ExerciseStyle"
        },
        {
          "type": "null"
        }
      ],
      "description": "行使スタイル（american/european/bermudan）"
    }
  },
  "required": [
    "strike_price",
    "option_type"
  ],
  "unevaluatedProperties": false
}
