{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OrderBook",
  "description": "複数レベルの板情報を表現する",
  "type": "object",
  "properties": {
    "symbol": {
      "$ref": "definitions.json#/$defs/Symbol",
      "description": "銘柄識別子"
    },
    "timestamp": {
      "$ref": "definitions.json#/$defs/Timestamp",
      "description": "板情報取得時刻"
    },
    "bids": {
      "type": "array",
      "items": {
        "$ref": "definitions.json#/$defs/PriceLevel"
      },
      "description": "買い板（価格降順）"
    },
    "asks": {
      "type": "array",
      "items": {
        "$ref": "definitions.json#/$defs/PriceLevel"
      },
      "description": "売り板（価格昇順）"
    }
  },
  "required": [
    "symbol",
    "timestamp",
    "bids",
    "asks"
  ],
  "unevaluatedProperties": false
}
