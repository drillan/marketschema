{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://marketschema.example.com/schemas/volume_info",
  "title": "VolumeInfo",
  "description": "出来高と売買代金を表現する",
  "type": "object",
  "properties": {
    "symbol": {
      "$ref": "https://marketschema.example.com/schemas/definitions#/$defs/Symbol",
      "description": "銘柄識別子"
    },
    "timestamp": {
      "$ref": "https://marketschema.example.com/schemas/definitions#/$defs/Timestamp",
      "description": "データ取得時刻"
    },
    "volume": {
      "$ref": "https://marketschema.example.com/schemas/definitions#/$defs/Size",
      "description": "出来高（数量ベース）"
    },
    "quote_volume": {
      "oneOf": [
        { "$ref": "https://marketschema.example.com/schemas/definitions#/$defs/Size" },
        { "type": "null" }
      ],
      "description": "売買代金（決済通貨建て）"
    }
  },
  "required": ["symbol", "timestamp", "volume"],
  "unevaluatedProperties": false
}
