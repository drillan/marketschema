{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Quote",
  "description": "最良気配値（BBO: Best Bid/Offer）を表現する",
  "type": "object",
  "properties": {
    "symbol": {
      "$ref": "definitions.json#/$defs/Symbol",
      "description": "銘柄識別子"
    },
    "timestamp": {
      "$ref": "definitions.json#/$defs/Timestamp",
      "description": "気配値取得時刻"
    },
    "bid": {
      "oneOf": [
        {
          "$ref": "definitions.json#/$defs/Price"
        },
        {
          "type": "null"
        }
      ],
      "description": "買い気配値"
    },
    "ask": {
      "oneOf": [
        {
          "$ref": "definitions.json#/$defs/Price"
        },
        {
          "type": "null"
        }
      ],
      "description": "売り気配値"
    },
    "bid_size": {
      "oneOf": [
        {
          "$ref": "definitions.json#/$defs/Size"
        },
        {
          "type": "null"
        }
      ],
      "description": "買い気配の数量"
    },
    "ask_size": {
      "oneOf": [
        {
          "$ref": "definitions.json#/$defs/Size"
        },
        {
          "type": "null"
        }
      ],
      "description": "売り気配の数量"
    }
  },
  "required": [
    "symbol",
    "timestamp"
  ],
  "unevaluatedProperties": false
}
