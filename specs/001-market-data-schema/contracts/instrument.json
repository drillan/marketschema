{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://marketschema.example.com/schemas/instrument",
  "title": "Instrument",
  "description": "銘柄識別情報を表現する",
  "type": "object",
  "properties": {
    "symbol": {
      "$ref": "https://marketschema.example.com/schemas/definitions#/$defs/Symbol",
      "description": "銘柄識別子"
    },
    "asset_class": {
      "$ref": "https://marketschema.example.com/schemas/definitions#/$defs/AssetClass",
      "description": "資産クラス"
    },
    "currency": {
      "oneOf": [
        { "$ref": "https://marketschema.example.com/schemas/definitions#/$defs/Currency" },
        { "type": "null" }
      ],
      "description": "単一通貨（株式・債券等）"
    },
    "exchange": {
      "oneOf": [
        { "$ref": "https://marketschema.example.com/schemas/definitions#/$defs/Exchange" },
        { "type": "null" }
      ],
      "description": "上場取引所（ISO 10383 MIC）"
    },
    "base_currency": {
      "oneOf": [
        { "$ref": "https://marketschema.example.com/schemas/definitions#/$defs/Currency" },
        { "type": "null" }
      ],
      "description": "基軸通貨（FX・暗号資産のペア商品）"
    },
    "quote_currency": {
      "oneOf": [
        { "$ref": "https://marketschema.example.com/schemas/definitions#/$defs/Currency" },
        { "type": "null" }
      ],
      "description": "決済通貨（FX・暗号資産のペア商品）"
    }
  },
  "required": ["symbol", "asset_class"],
  "unevaluatedProperties": false
}
